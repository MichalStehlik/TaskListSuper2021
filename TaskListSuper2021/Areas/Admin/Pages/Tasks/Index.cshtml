@page
@model TaskListSuper2021.Areas.Admin.Pages.Tasks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].FinishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Finished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Receiver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TaskItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TaskId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TaskId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
