@page
@model TaskListSuper2021.Pages.TasksModel

@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks For Me</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].FinishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Finished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TaskItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Email)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.TaskId">Details</a> |
                    @if (item.Finished == false) 
                    {
                        <a asp-page-handler="Finish" asp-route-id="@item.TaskId">Finish</a>
                    } 
                    else
                    {
                        <a asp-page-handler="Unfinish" asp-route-id="@item.TaskId">Unfinish</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
